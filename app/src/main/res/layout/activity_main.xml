<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rocksalt_regular"
        android:text="Easy Kanji"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <ImageView
        android:id="@+id/imagefirst"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/flower1"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="157dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="500dp"/>

    <ImageView
        android:id="@+id/imagesecond"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/flower2"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="157dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="500dp"/>

    <ImageView
        android:id="@+id/imagethird"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/flower3"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="157dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="500dp"/>

    <ImageView
        android:id="@+id/imagefouth"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/flower4"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="157dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="500dp"/>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="500dp"
        android:layout_height="396dp"
        android:src="@drawable/welcome_image2"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="157dp"
        android:layout_marginTop="-50dp"
        android:layout_marginStart="-50dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="408dp"
        android:layout_height="350dp"
        android:src="@drawable/welcome_image"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="157dp"
        android:layout_marginTop="200dp"/>

    <Button
        android:id="@+id/btn_SignIn"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_dos"
        android:text="Đăng nhập"
        android:textColor="@android:color/white"
        android:textColorHighlight="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_SignIn"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="85dp"
        android:text="Bạn chưa có tài khoản?"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_SignIn"
        android:layout_marginStart="255dp"
        android:fontFamily="@font/suezone_regular"
        android:text="ĐĂNG KÝ"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="621dp" />
</RelativeLayout>